#!/usr/bin/env bash

(
  set -e
  set -u

  . functions

  # never hurts to be up to date

  sudo yum update -y

  # things I expect to have at my fingertips

  command-exists vim || sudo yum install -y vim
  command-exists git || sudo yum install -y git

  for file in "./partials"/*.sh
  do
    echo "Applying $file..."
    bash -eu "$file"
  done 
)
